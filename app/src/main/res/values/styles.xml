<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefaultToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="navigationIcon">@drawable/ic_arrow_white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="DefaultTabLayout">
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabTextColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabIndicatorColor">@color/gold</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>

    <style name="DefaultRecyclerView">
        <item name="android:orientation">vertical</item>
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
        <item name="spanCount">2</item>
    </style>

    <style name="TextViewPoppinsRegular">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="TextViewPoppinsRegular18sp" parent="TextViewPoppinsRegular">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewPoppinsRegular18spBold" parent="TextViewPoppinsRegular18sp">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewBlack">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewBlackBold" parent="TextViewBlack">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SelectableView">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>
